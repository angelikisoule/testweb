<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="">
	<Resource
			auth="Container" 
			driverClassName="org.postgresql.Driver" 
			type="javax.sql.DataSource" 
			name="jdbc/dataSource" 
			url="jdbc:postgresql://localhost:5432/documentParser?autoReconnect=true&amp;characterEncoding=UTF-8" 
			username="postgres" 
			password="postgres" 
			logAbandoned="true" 
			maxActive="40" 
			maxIdle="5" 
			maxWait="3000" 
			removeAbandoned="true" 
			removeAbandonedTimeout="60" 
			testOnBorrow="true" 
			validationQuery="select 1" />
</Context>


